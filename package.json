{
	"name": "the-watcher",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"test": "vue-cli-service lint",
		"e2e": "vue-cli-service e2e",
		"lint": "vue-cli-service lint",
		"functions": "firebase deploy --only functions",
		"hosting": "firebase deploy --only hosting",
		"e2e:open": "vue-cli-service e2e:open",
		"tailwind": "./node_modules/.bin/tailwind build ./src/css/tailwind.css -c ./tailwind.js -o ./src/css/tailwind-classes.css"
	},
	"dependencies": {
		"babel-loader": "^8.0.6",
		"babel-preset-es2015": "^6.24.1",
		"firebase": "^4.13",
		"lodash": "^4.17.10",
		"register-service-worker": "^1.2.0",
		"vue": "^2.5.16",
		"vue-router": "^3.0.1",
		"vue2-transitions": "^0.2.3",
		"vuefire": "^2.0.0-alpha.10",
		"vuex": "^3.0.1",
		"webpack": "^4.39.1"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.0.0-rc.3",
		"@vue/cli-plugin-e2e-cypress": "^3.0.0-rc.3",
		"@vue/cli-plugin-eslint": "^3.0.0-rc.3",
		"@vue/cli-plugin-pwa": "^3.0.0-rc.3",
		"@vue/cli-service": "^3.0.0-rc.3",
		"@vue/eslint-config-prettier": "^3.0.0-rc.3",
		"babel-core": "^6.26.3",
		"firebase-admin": "^5.12.0",
		"firebase-functions": "^1.0.2",
		"glob-all": "^3.1.0",
		"lint-staged": "^6.0.0",
		"node-sass": "^4.7.2",
		"purgecss-webpack-plugin": "^1.1.0",
		"sass-loader": "^6.0.6",
		"tailwindcss": "^0.5.3",
		"vue-template-compiler": "^2.5.16"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"engines": {
		"node": ">=8.10 <10"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"src/**/*.js": [
			"vue-cli-service lint",
			"git add"
		],
		"src/**/*.vue": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
